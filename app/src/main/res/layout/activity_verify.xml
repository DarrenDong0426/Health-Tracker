<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyActivity"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp">

        <TextView
            android:id="@+id/title_VerifyTextView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"

            android:fontFamily="sans-serif"
            android:text="Verify"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="70dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/information_VerifyTextView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_VerifyTextView"
            android:layout_marginTop="15dp"

            android:fontFamily="sans-serif"
            android:text="A 6-digit code has been sent to:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/email_VerifyTextView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/information_VerifyTextView"
            android:layout_marginTop="5dp"

            android:fontFamily="sans-serif"
            android:text="Email"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold">
        </TextView>

        <TextView
            android:id="@+id/instructions_VerifyTextView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_VerifyTextView"
            android:layout_marginTop="10dp"

            android:fontFamily="sans-serif"
            android:text="Enter the code below:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/instructions_VerifyTextView"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/code1_VerifyTextInputLayout"

                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="3dp"
                app:boxStrokeColor="#FFFFFF"

                android:hint=""
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/code1_VerifyTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:inputType="number">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/code2_VerifyTextInputLayout"

                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="3dp"
                app:boxStrokeColor="#FFFFFF"

                android:hint=""
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/code2_VerifyTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:inputType="number">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/code3_VerifyTextInputLayout"

                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="3dp"
                app:boxStrokeColor="#FFFFFF"

                android:hint=""
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/code3_VerifyTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:inputType="number">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/code4_VerifyTextInputLayout"

                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="3dp"
                app:boxStrokeColor="#FFFFFF"

                android:hint=""
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/code4_VerifyTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:inputType="number">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/code5_VerifyTextInputLayout"

                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="3dp"
                app:boxStrokeColor="#FFFFFF"

                android:hint=""
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/code5_VerifyTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:inputType="number">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/code6_VerifyTextInputLayout"

                android:layout_width="42dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"

                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                app:boxStrokeWidth="3dp"
                app:boxStrokeColor="#FFFFFF"

                android:hint=""
                android:textColorHint="@color/white"
                app:hintTextColor="@color/white">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/code6_VerifyTextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:inputType="number">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <Button
            android:id="@+id/verifyBorder_VerifyButton"

            android:layout_width="95dp"
            android:layout_height="54dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/verify_VerifyButton"
            android:layout_marginTop="-51dp"

            android:backgroundTint="@color/white" />
        <Button
            android:id="@+id/verify_VerifyButton"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_VerifyTextView"
            android:layout_centerInParent="true"

            android:layout_marginTop="120dp"
            android:backgroundTint="@color/black"
            android:fontFamily="sans-serif"
            android:text="Verify"
            android:textAllCaps="false"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/error_VerifyTextView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/verify_VerifyButton"
            android:layout_marginTop="15dp"

            android:fontFamily="sans-serif"
            android:text=""
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="15dp"
            android:textStyle="bold">
        </TextView>

        <Button
            android:id="@+id/resendCode_VerifynButton"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/error_VerifyTextView"
            android:layout_marginTop="90dp"

            android:backgroundTint="@color/black"
            android:text="Didn't get the code?\nClick here to resend."
            android:textAllCaps="false"
            android:textColor="@color/white">
        </Button>

        <TextView
            android:id="@+id/codeSent_VerifyTextView"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/resendCode_VerifynButton"
            android:layout_marginTop="0dp"

            android:fontFamily="sans-serif"
            android:text=""
            android:textAlignment="center"
            android:textColor="#00FF00"
            android:textSize="15dp"
            android:textStyle="bold">
        </TextView>

    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>