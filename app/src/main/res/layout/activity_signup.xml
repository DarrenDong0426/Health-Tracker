<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SignupActivity"
    android:background="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="30dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        android:gravity="center">

        <TextView
            android:id="@+id/signup_title"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"

            android:fontFamily="sans-serif"
            android:text="Sign Up"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="70dp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/signup_instruction"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_title"
            android:layout_marginTop="15dp"

            android:fontFamily="sans-serif"
            android:text="Enter your information below:"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold">
        </TextView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/email_signup_border"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/signup_instruction"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="3dp"
            app:boxStrokeColor="#FFFFFF"

            app:startIconTint="@color/white"

            app:endIconMode="clear_text"
            app:endIconTint="@color/white"

            android:hint="Email"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:inputType="textEmailAddress">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/username_border"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/email_signup_border"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="3dp"
            app:boxStrokeColor="#FFFFFF"

            app:endIconMode="clear_text"
            app:endIconTint="@color/white"

            android:hint="Username"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:inputType="text"
                android:maxLength="18">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/password_border"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_border"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="3dp"
            app:boxStrokeColor="#FFFFFF"

            app:startIconTint="@color/white"

            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"

            android:hint="Password"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:inputType="textPassword">
            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/repeatPassword_border"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/password_border"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="0dp"

            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:boxStrokeWidth="3dp"
            app:boxStrokeColor="#FFFFFF"

            app:endIconMode="password_toggle"
            app:endIconTint="@color/white"

            android:hint="Repeat Password"
            android:textColorHint="@color/white"
            app:hintTextColor="@color/white"
            tools:ignore="NotSibling">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/repeatPassword_signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/white"></com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/registerButton_border"

            android:layout_width="98dp"
            android:layout_height="52dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_below="@id/registerButton"
            android:layout_marginTop="-50dp"

            android:backgroundTint="@color/white" />

        <Button
            android:id="@+id/registerButton"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/repeatPassword_border"

            android:layout_centerInParent="true"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/black"
            android:fontFamily="sans-serif"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/white"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/errorSignup"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/registerButton"
            android:layout_marginTop="15dp"

            android:fontFamily="sans-serif"
            android:text=""
            android:textAlignment="center"
            android:textColor="#FF0000"
            android:textSize="15dp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>